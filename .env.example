# Database connection string
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://user:password@localhost:3306/webseries

# qBittorrent Web UI Settings
QBITTORRENT_HOST=localhost
QBITTORRENT_PORT=8090
QBITTORRENT_USERNAME=
QBITTORRENT_PASSWORD=

# qBittorrent Download Paths
# Temp folder where downloads are stored initially
QBITTORRENT_TEMP_DIR=/home/webseries/downloads/temp
# Completed folder where finished torrents are moved
QBITTORRENT_COMPLETED_DIR=/home/webseries/downloads/completed

# Optional: Custom download path and category
# QBITTORRENT_SAVE_PATH=/path/to/downloads
# QBITTORRENT_CATEGORY=webseries
